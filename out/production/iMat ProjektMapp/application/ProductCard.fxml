<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="250.0" prefWidth="150.0" style="-fx-background-radius: 25; -fx-background-color: white;" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <VBox alignment="CENTER" layoutX="14.0" layoutY="14.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <ImageView fx:id="productImage" fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
              <Label fx:id="productName" text="Mellanmjök">
                  <font>
                      <Font size="18.0" />
                  </font>
              </Label>
              <Label fx:id="prizeLabel" text="437,50 per förpackning" />
              <Label fx:id="ecoLabel" text="Ekologisk" textFill="#5cc343">
                  <font>
                      <Font name="System Bold" size="13.0" />
                  </font>
            </Label>
              <Button mnemonicParsing="false" onAction="#handleAddAction" stylesheets="@../styling/productCardButton.css" text="Lägg till" />
         </children>
      </VBox>
    </children>
</fx:root>
